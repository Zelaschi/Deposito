@page "/deposito/crear"

<PageTitle>Crear Deposito</PageTitle>

@using BusinessLogic
@using Domain

@inject PromocionLogic PromocionLogic
@inject DepositoLogic DepositoLogic
@inject NavigationManager NavigationManager

<h1>Crear Deposito</h1>
<form>
    <div class="form-group">
        <label for="title">Area</label>
        <input type="text" class="form-control" id="Area" @bind="depositoActual.Area"/>
    </div>
    <div class="form-group">
        <label for="title">Tamanio</label>
        <input type="text" class="form-control" id="Tamanio" @bind="depositoActual.Tamanio"/>
    </div>
    <div class="form-group">
        <label for="title">Climatizacion</label>
        <input type="checkbox" class="form-check-input" id="Climatizacion" @bind="depositoActual.Climatizacion"/>
    </div>

    <button type="button" class="btn btn-primary" @onclick="GuardarCambios">Guardar cambios</button>
</form>

@code{
    private Deposito? depositoActual;

    protected override void OnInitialized()
    {
        depositoActual = new Deposito("A", "Pequenio", true);
    }

    private void GuardarCambios()
    {
        DepositoLogic.AddDeposito(depositoActual);
        NavigationManager.NavigateTo("/deposito");
    }
}


